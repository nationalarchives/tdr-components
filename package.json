{
  "name": "@nationalarchives/tdr-components",
  "description": "This library contains custom components based on the GovUK frontend",
  "main": "index.ts",
  "scripts": {
    "sass-compile": "sass --load-path=node_modules --no-source-map ./src/nationalarchives/all.scss ./public/main.css",
    "watch:sass-compile": "nodemon -e scss -x \"npm run sass-compile\"",
    "sass-copy": "copyfiles -u 2 'src/nationalarchives/**/*.scss' package",
    "test": "jest",
    "compile-server": "webpack --config webpack.config.server.js --mode production",
    "watch:compile-server": "nodemon -e ts,yaml -x \"npm run compile-server\"",
    "compile": "webpack --mode production",
    "build": "npm-run-all sass-copy compile",
    "build-server": "npm-run-all compile-server sass-compile",
    "dev": "npm-run-all --parallel watch:start watch:compile-server watch:sass-compile",
    "start": "ts-node app/start.ts",
    "watch:start": "nodemon -e yaml -x \"ts-node app/start.ts\"",
    "lint": "eslint src app lib",
    "stylelint": "stylelint **/*.scss",
    "checks": "npm-run-all test lint stylelint",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "chromatic": "npx chromatic --project-token=dd44854bc8bf"
  },
  "author": {
    "name": "The National Archives"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/eslint-parser": "^7.19.1",
    "@hapi/eslint-plugin": "^6.0.0",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/html": "^6.5.16",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/testing-library": "^0.0.13",
    "@types/cheerio": "^0.22.31",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.1.2",
    "@types/jest-axe": "^3.5.5",
    "@types/jest-environment-puppeteer": "^5.0.2",
    "@types/js-yaml": "^4.0.5",
    "@types/nunjucks": "^3.2.1",
    "@types/puppeteer": "^5.4.6",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "babel-loader": "^8.3.0",
    "cheerio": "^1.0.0-rc.12",
    "chromatic": "^6.17.0",
    "copyfiles": "^2.4.1",
    "css-loader": "^6.7.3",
    "eslint": "^8.25.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-ava": "^13.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.0",
    "eslint-plugin-storybook": "^0.6.10",
    "express": "^4.18.2",
    "jest": "^29.1.2",
    "jest-axe": "^6.0.0",
    "jest-environment-jsdom": "^29.1.2",
    "jest-puppeteer": "^6.1.1",
    "js-yaml": "^4.1.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.3",
    "puppeteer": "^18.2.1",
    "sass": "^1.55.0",
    "sass-loader": "^13.2.0",
    "simple-nunjucks-loader": "^3.2.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.14.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^5.0.0",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
