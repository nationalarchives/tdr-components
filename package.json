{
  "name": "@nationalarchives/tdr-components",
  "description": "This library contains custom components based on the GovUK frontend",
  "main": "index.ts",
  "scripts": {
    "sass-compile-govuk": "sass --load-path=node_modules --no-source-map ./src/nationalarchives/govuk.scss ./public/govuk.css",
    "sass-compile": "sass --load-path=node_modules --no-source-map ./src/nationalarchives/all.scss ./public/main.css",
    "sass-copy": "copyfiles -u 2 'src/nationalarchives/**/*.scss' package",
    "test": "jest",
    "compile": "webpack --mode production",
    "build": "npm-run-all sass-compile sass-copy compile",
    "lint": "eslint src app lib",
    "stylelint": "stylelint **/*.scss",
    "checks": "npm-run-all test lint stylelint",
    "start-storybook": "npm-run-all -s sass-compile-govuk && start-storybook -p 6006",
    "build-storybook": "npm-run-all -s sass-compile-govuk && build-storybook --quiet",
    "test-storybook": "test-storybook"
  },
  "author": {
    "name": "The National Archives"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/eslint-parser": "^7.24.5",
    "@hapi/eslint-plugin": "^6.0.0",
    "@storybook/addon-a11y": "^8.1.2",
    "@storybook/addon-actions": "^8.1.2",
    "@storybook/addon-essentials": "^8.1.2",
    "@storybook/addon-interactions": "^8.1.2",
    "@storybook/addon-links": "^8.1.2",
    "@storybook/builder-webpack5": "^8.1.2",
    "@storybook/html": "^8.1.2",
    "@storybook/jest": "^0.2.3",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/test-runner": "^0.18.1",
    "@storybook/testing-library": "^0.2.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jest-environment-puppeteer": "^5.0.6",
    "@types/js-yaml": "^4.0.9",
    "@types/nunjucks": "^3.2.6",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "axe-playwright": "^2.0.1",
    "babel-loader": "^9.1.3",
    "copyfiles": "^2.4.1",
    "css-loader": "^7.1.1",
    "eslint": "^8.25.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-ava": "^15.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.7.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-storybook": "^0.8.0",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.7.0",
    "js-yaml": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.4",
    "sass": "^1.77.2",
    "sass-loader": "^14.2.1",
    "simple-nunjucks-loader": "^3.2.0",
    "style-loader": "^4.0.0",
    "stylelint": "^16.5.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "ts-jest": "^29.1.3",
    "ts-loader": "^9.5.1",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "yaml-loader": "^0.8.1"
  },
  "dependencies": {
    "govuk-frontend": "^4.8.0"
  }
}
